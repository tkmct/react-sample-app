{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonJS",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
